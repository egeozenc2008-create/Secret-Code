import random

def oyun():
    print("ğŸ® Tahmin Oyununa HoÅŸgeldin!")

    # Zorluk seÃ§imi
    print("Zorluk seviyeni seÃ§:")
    print("1 - Kolay (1-50)")
    print("2 - Orta (1-100)")
    print("3 - Zor (1-500)")
    secim = input("SeÃ§imin (1/2/3): ")

    if secim == "1":
        ust_sinir = 50
    elif secim == "2":
        ust_sinir = 100
    else:
        ust_sinir = 500

    sayi = random.randint(1, ust_sinir)
    hak = int(input("KaÃ§ hakta bulmak istersin? "))
    deneme = 0

    print(f"Ben 1 ile {ust_sinir} arasÄ±nda bir sayÄ± tuttum, bakalÄ±m bulabilecek misin?")

    while hak > 0:
        tahmin = int(input("Tahminin: "))
        deneme += 1
        hak -= 1

        if tahmin < sayi:
            print(f"Daha bÃ¼yÃ¼k bir sayÄ± dene. (Kalan hak: {hak})")
        elif tahmin > sayi:
            print(f"Daha kÃ¼Ã§Ã¼k bir sayÄ± dene. (Kalan hak: {hak})")
        else:
            print(f"ğŸ‰ Tebrikler! {deneme} denemede bildin!")
            return deneme

    print(f"ğŸ˜¢ HakkÄ±n bitti! TuttuÄŸum sayÄ± {sayi} idi.")
    return None


def oyun_baslat():
    en_iyi_skor = None

    while True:
        skor = oyun()

        if skor is not None:
            if en_iyi_skor is None or skor < en_iyi_skor:
                en_iyi_skor = skor
                print(f"ğŸ† Yeni en iyi skorun: {en_iyi_skor} deneme!")

        devam = input("Tekrar oynamak ister misin? (e/h): ")
        if devam.lower() != "e":
            print("ğŸ‘‹ Oyun bitti, gÃ¶rÃ¼ÅŸÃ¼rÃ¼z!")
            break


oyun_baslat()
